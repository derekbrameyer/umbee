<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00ffffff"/>
            <stroke android:width="1dp"
                    android:color="@color/check_box_outer_border"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00ffffff"/>
            <stroke android:width="2dp"
                    android:color="@color/check_box_inner_border"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:type="radial"
                    android:gradientRadius="25"
                    android:startColor="@color/check_box_inner_circle_focused"
                    android:endColor="@color/check_box_outer_circle_focused"/>
        </shape>
    </item>
</layer-list>